@{
    ViewData["Title"] = ViewData["Title"] ?? "Contract Monthly Claim System";  // Default to avoid null
}

<h1>@ViewData["Title"]</h1>

<!-- Safeguard if ViewData or other variables might be null -->
<div class="container">
    <!-- Independent Contractor Information -->
    <h2>Independent Contractor</h2>
    <div class="form-group">
        <label>Address:</label>
        <input type="text" class="form-control" placeholder="Enter Address">
    </div>
    <div class="form-group">
        <label>Contact Details:</label>
        <input type="text" class="form-control" placeholder="Enter Contact Details">
    </div>

    <!-- Rosebank College Information -->
    <h2>Rosebank College</h2>
    <div class="form-group">
        <label>Address:</label>
        <input type="text" class="form-control" placeholder="Enter Address">
    </div>
    <div class="form-group">
        <label>City:</label>
        <input type="text" class="form-control" placeholder="Enter City">
    </div>
    <div class="form-group">
        <label>VAT Number:</label>
        <input type="text" class="form-control" placeholder="Enter VAT Number">
    </div>

    
<!-- Submit Button -->
<button type="submit" class="btn btn-primary">Submit Claim</button>